    </header>

    <div class="main">
        <!--Barra lateral de Navega√ß√£o-->
        <div class="sidenav">
            <a href="/">Op√ß√£o</a>
        </div>

        <!--Div usada para centralizar o conteudo para da p√°gina al√©m da barra lateral-->
        <div class="conteudo">
            <div class="bloco_titulo">
                <h1 class="titulo">Hist√≥rico de Transa√ß√µes</h1>
            </div>

            <br>
            
            <div class="table_div">
                <table>
                    <thead>
                        <tr>
                            <th style="width: 100px;">Data</th>
                            <th style="width: 100px;">Valor Total</th>
                            <th style="width: 150px;">Formas de Pagamento</th>
                            <th style="width: 150px;">Status</th>
                            <th style="width: 100px;">A√ß√µes</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (transacoes && transacoes.length > 0) { %>
                            <% transacoes.forEach(transacao => { %>
                                <tr>
                                    <td><%= transacao.tra_data_formatada %></td>
                                    <td>R$ <%= transacao.tra_valor.toFixed(2).replace('.', ',') %></td>
                                    <td>
                                        <% transacao.formasPagamento.forEach((forma, index) => { %>
                                            <% let tipoPagamento; %>
                                            <% switch(forma.tipo) { 
                                                case '1': tipoPagamento = 'Cart√£o de Cr√©dito'; break;
                                                case '2': tipoPagamento = 'Cupom de Troca'; break;
                                                case '3': tipoPagamento = 'Cupom de Promo√ß√£o'; break;
                                                default: tipoPagamento = 'Desconhecido';
                                            } %>
                                            <%= tipoPagamento %> (R$ <%= forma.valor.toFixed(2).replace('.', ',') %>)<% if(index < transacao.formasPagamento.length - 1) { %>, <% } %>
                                        <% }); %>
                                    </td>
                                    <td><%= transacao.tra_status %></td>
                                    <td>
                                        <div class="botoes_resultado">
                                            <a class="ver_mais" href="/pagamento/detalhes?tra_id=<%= transacao.tra_id %>">Ver Mais</a>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="7">Nenhuma transa√ß√£o encontrada</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script type="module" src="/scripts/navbar.js"></script>
</body>
</html>