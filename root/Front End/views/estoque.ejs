<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/style/adm/recursosBasicos.css">
    <link rel="stylesheet" href="/style/adm/contas/admContasStyle.css">
    <link rel="stylesheet" href="/style/adm/contas/scriptsStyle.css">
    <link rel="icon" href="/imagens/livro-16.ico">
</head>
<body>

    <header>
        <nav class="main-nav">
            <a class="home-link">Home</a>
            <div class="nav-botao">
                <button id="Clientes">Clientes</button>
                <button id="inativos">Inativos</button>
            </div>
        </nav>
        
        <nav class="usuario-nav">
            <div class="usuario-sessao">
                <span class="usuario-nome" id="adm-name-display"></span>
                <img src="/imagens/avatar.jpg" alt="Imagem do usuário" class="usuario-imagem">
            </div>
        </nav>
    </header>

    <div class="main">
        <!--Barra lateral de Navegação-->
        <div class="sidenav">
            <a id="pedidos">Pedidos</a>
            <a id="estoque">Estoque</a>
            <a id="analise">Análise</a>
        </div>

        <div class="conteudo">
            <div class="bloco_titulo">
                <h1 class="titulo">Entrada de Estoque</h1>
            </div>

            <br>

            <div class="linha-input-pesquisa">
                <label class="label_pequena">ISBN</label>
                <input type="number" class="filtro-pesquisa-numero-isbn" placeholder="Pesquisar...">
            </div>

            <br>

            <div class="linha-input-pesquisa">
                <label class="label_pequena">Cód. Barras</label>
                <input type="number" class="filtro-pesquisa-numero-codigo" placeholder="Pesquisar...">
            </div>

            <div class="botoes">
                <button type="submit" id="pesquisa-botao">Procurar</button>
            </div>

            <br>

            <div class="container-livro-estoque">
                <div class="livro-estoque-adicionado hidden">
                    <form id="Entrada">
                        <div class="linha_centralizada">
                            <div class="numero">
                                <label class="label_pequena" for="qtd.">Qtd.</label>
                                <input class="numero_input" type="number" id="qtd_estoque" name="qtd_estoque">
                            </div>

                            <div class="numero">
                                <label class="label_pequena" for="custo">Custo</label>
                                <input class="numero_input" type="number" step="0.01" id="custo" name="custo">
                            </div>
                        </div>

                        <div class="linha_centralizada">
                            <div class="nome">
                                <label class="label" for="fornecedor">Fornecedor</label>
                                <input class="nome_input" type="text" id="fornecedor" name="fornecedor">
                            </div>
                        </div>
                                        
                        <div class="botoes">
                            <button class="adicionar-estoque" type="button" id="confirmar">Dar Entrada</button>
                        </div>
                    </form>
                </div>

                <div class="table_div hidden">
                <table>
                    <thead>
                        <tr>
                            <th>Título</th>
                            <th>Código</th>
                            <th>ISBN</th>
                            <th>Autor</th>
                            <th>Editora</th>
                            <th>Qtd. Estoque</th>
                            <th>Preço</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (livros && livros.length > 0) { %>
                            <% livros.forEach(livro => { %>
                                <tr>
                                    <td><%= livro.lvr_titulo %></td>
                                    <td><%= livro.lvr_codigo_de_barras %></td>
                                    <td><%= livro.lvr_isbn %></td>
                                    <td><%= livro.atr_nome || 'N/A' %></td>
                                    <td><%= livro.edi_nome || 'N/A' %></td>
                                    <td><%= livro.lvr_qtd_estoque %></td>
                                    <td>R$<%= Number(livro.lvr_custo) %></td>
                                    <td style="display: none;" id="livro-data" data-livro-id="<%= livro.lvr_id %>"></td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="7">Nenhum livro encontrado</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>

            </div>
        </div>
    </div>

    <script type="module" src="/scripts/base/adm/estoque.js"></script>
    <script type="module" src="/scripts/base/adm/navbarAdm.js"></script>
    <script type="module" src="/scripts/base/adm/sidebarAdm.js"></script>

</body>
</html>