<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/style/usuario/contas/cadastroStyle.css">
    <link rel="stylesheet" href="/style/usuario/contas/scriptsStyle.css">
    <link rel="stylesheet" href="/style/usuario/recursosBasicos.css">
    <link rel="icon" href="/imagens/livro-16.ico">
</head>
<body>

    <header>
        <nav class="main-nav">
            <a class="home-link">Home</a>
            <div class="nav-botao">
                <button>Hist√≥rico</button>
                <button id="botao-carrinho">Carrinho</button>
                <button>Trocas</button>
                <button id="botao-chatbot-navbar">Chatbot</button>
            </div>
        </nav>
        
        <nav class="usuario-nav">
            <div class="notificacao-container">
                <img src="/imagens/notificacao.png" alt="Notifica√ß√µes" class="notificacao-icone" hidden>
                <div class="notificacao-submenu">
                    <div class="notificacoes-lista"></div>
                </div>
            </div>

            <div class="barra-pesquisa">
                <input type="text" id="navbarInput" placeholder="Pesquisar...">
                <button id="navbarBotaoPesquisa">üîç</button>
            </div>
            
            <div class="usuario-sessao">
                <div id="user-data" data-user-id="<%= Array.isArray(usuario) ? usuario[0]?.usr_id : usuario?.usr_id %>" style="display:none;"></div>
                <span class="usuario-nome"><%= Array.isArray(usuario) ? usuario[0]?.usr_nome : usuario?.usr_nome %></span>
                <img src="/imagens/avatar.jpg" alt="Imagem do usu√°rio" class="usuario-imagem">
            </div>
        </nav>
    </header>

    <div class="main">
        <!--Barra lateral de Navega√ß√£o-->
        <div class="sidenav">
            <a id="cadastro-side-btn">Cadastrar</a>
            <a id="senha-side-btn">Atualizar Senha</a>
            <a id="atualizar-side-btn">Atualizar Cadastro</a>
            <a id="cartao-side-btn">Cart√µes</a>
            <a id="end-entrega-side-btn">End. Entrega</a>
            <a id="end-cobranca-side-btn">End. Cobranca</a>
        </div>

        <div class="conteudo">
            <!-- T√≠tulo Principal -->
            <div class="bloco_titulo">
                <h1 class="titulo">Atualizando Usuario</h1>
            </div>

            <form method="POST">
                <div class="container-forms">
                    <!-- Informa√ß√µes Pessoais -->
                    <div class="usuario">
                        <div class="bloco_titulo">
                            <h1 class="titulo">Informa√ß√µes Pessoais</h1>
                        </div>

                        <!-- Nome -->
                        <div class="nome">
                            <label class="label" for="nome">Nome Completo</label>
                            <input class="nome_input" type="text" id="nome" name="nome" value="<%=usuario.usr_nome%>" required>
                        </div>

                        <!-- Email -->
                        <div class="email">
                            <label class="label" for="email">E-mail</label>
                            <input class="email_input" type="email" id="email" name="email" value="<%=usuario.usr_email%>" required>
                        </div>

                        <!-- Telefone 1 -->
                        <div class="telefone">
                            <label class="label_pequena" for="telefone1">Telefone 1</label>
                            <input class="telefone_input" type="tel" id="telefone1" name="telefone1" value="<%=usuario.usr_telefone1%>" required>
                        </div>

                        <!-- Telefone 2 -->
                        <div class="telefone">
                            <label class="label_pequena" for="telefone2">Telefone 2</label>
                            <input class="telefone_input" type="tel" id="telefone2" name="telefone2" value="<%=usuario.usr_telefone2%>">
                        </div>

                        <!-- CPF -->
                        <div class="cpf">
                            <label class="label" for="cpf">CPF</label>
                            <input class="cpf_input" type="text" id="cpf" name="cpf" value="<%=usuario.usr_cpf%>" required>
                        </div>

                        <!-- G√™nero -->
                        <!--Input de G√™nero-->
                    <div class="genero">
                        <label class="label_genero">G√™nero</label>
                        <select class="selecao" id="genero" name="genero" required>
                            <option value="">Selecione</option>
                            <option value="M">Masculino</option>
                            <option value="F">Feminino</option>
                            <option value="NB">N√£o Bin√°rio</option>
                        </select>
                    </div>

                        <!-- Data de Nascimento -->
                        <div class="data_div">
                            <label class="label_pequena" for="data">Data de Nascimento</label>
                            <% let dataFormatada = '';
                            if (usuario[0].usr_data_de_nascimento) {
                                let date = new Date(usuario[0].usr_data_de_nascimento);
                                if (!isNaN(date.getTime())) {
                                    dataFormatada = date.toISOString().split('T')[0];
                                }
                            }
                            %>
                            <input type="date" id="data" name="data" value="<%=dataFormatada%>" required>
                        </div>

                        <!-- Senha -->
                        <div class="senha">
                            <label class="label" for="senha">Senha</label>
                            <div class="erro_div">
                                <input class="senha_input" type="password" id="senha" name="senha" value="<%=usuario.usr_senha%>" required>
                                <span id="erroSenha" class="erro" style="color: red; display: none;">*</span>
                            </div>
                        </div>

                        <!-- Confirma√ß√£o de Senha -->
                        <div class="senha">
                            <label class="label" for="conf_senha">Confirme a Senha</label>
                            <div class="erro_div">
                                <input class="senha_input" type="password" id="conf_senha" name="conf_senha" value="<%=usuario.usr_senha%>" required>
                                <span id="erroConfSenha" class="erro" style="color: red; display: none;">*</span>
                            </div>
                        </div>
                    </div>

                    <!-- Bot√£o de Confirma√ß√£o -->
                    <div class="botoes">
                        <button type="submit">Confirmar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="chat">
    <div class="header">
        <h3>Assistente Virtual</h3>
        <button class="close-chat">X</button>
    </div>
    <div class="screen"></div>
    <div class="input">
        <input type="text" placeholder="Digite sua mensagem...">
        <button id="ai-button">Enviar</button>
    </div>
    </div>

    <script type="module" src="/scripts/contas/usuario/atualizarUsuario.js"></script>
    <script type="module" src="/scripts/base/usuario/navbar.js"></script>
    <script type="module" src="/scripts/base/usuario/aiChatBot.js"></script>
    <script type="module" src="/scripts/contas/usuario/sidebar.js"></script>
</body>
</html>