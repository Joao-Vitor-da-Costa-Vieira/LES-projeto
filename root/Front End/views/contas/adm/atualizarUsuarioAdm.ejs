<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/style/adm/recursosBasicos.css">
    <link rel="stylesheet" href="/style/usuario/contas/cadastroStyle.css">
    <link rel="stylesheet" href="/style/usuario/contas/scriptsStyle.css">
    <link rel="icon" href="/imagens/livro-16.ico">
</head>
<body>

    <header>
        <nav class="main-nav">
            <a class="home-link">Home</a>
            <div class="nav-botao">
                <button id="Clientes">Clientes</button>
                <button id="inativos">Inativos</button>
            </div>
        </nav>
        
        <nav class="usuario-nav">
            <div class="usuario-sessao">
                <span class="usuario-nome" id="adm-name-display"></span>
                <img src="/imagens/avatar.jpg" alt="Imagem do usuário" class="usuario-imagem">
            </div>
        </nav>
    </header>

    <div class="main">
        <!--Barra lateral de Navegação-->
        <div class="sidenav">
            <a id="pedidos">Pedidos</a>
            <a id="estoque">Estoque</a>
            <a id="analise">Análise</a>
        </div>

        <div class="conteudo">
            <!-- Título Principal -->
            <div class="bloco_titulo">
                <h1 class="titulo">Atualizando Usuario</h1>
            </div>

            <form method="POST">
                <div class="container-forms">
                    <!-- Informações Pessoais -->
                    <div class="usuario">

                        <input id="id" name="id" value="<%= usuario[0].usr_id %>" style="display: none;"></input>

                        <!-- Nome -->
                        <div class="linha_centralizada">
                            <div class="nome">
                                <label class="label" for="nome">Nome Completo</label>
                                <input class="nome_input" type="text" id="nome" name="nome" value="<%=usuario[0].usr_nome%>" required>
                            </div>
                        </div>
                        

                        <!-- Email -->
                        <div class="linha_centralizada">
                            <div class="email">
                                <label class="label" for="email">E-mail</label>
                                <input class="email_input" type="email" id="email" name="email" value="<%=usuario[0].usr_email%>" required>
                            </div>  
                        </div>
                        

                        <!-- Telefone 1 -->
                        <div class="linha_centralizada">
                            <div class="telefone">
                                <label class="label_pequena" for="telefone1">Telefone 1</label>
                                <input class="telefone_input" type="number" id="telefone1" name="telefone1" value="<%=usuario[0].usr_telefone_1%>" required>
                            </div>
                        </div>
                        

                        <!-- Telefone 2 -->
                        <div class="linha_centralizada">
                            <div class="telefone">
                                <label class="label_pequena" for="telefone2">Telefone 2</label>
                                <input class="telefone_input" type="number" id="telefone2" name="telefone2" value="<%=usuario[0].usr_telefone_2 ? usuario[0].usr_telefone_2 : [] %>">
                            </div>  
                        </div>
                        

                        <!-- CPF -->
                        <div class="linha_centralizada">
                            <div class="cpf">
                                <label class="label" for="cpf">CPF</label>
                                <input class="cpf_input" type="text" id="cpf" name="cpf" value="<%=usuario[0].usr_cpf%>" required>
                            </div>
                        </div>
                        

                        <!-- Gênero -->
                        <!--Input de Gênero-->
                        <div class="genero">
                            <label class="label_genero">Gênero</label>
                            <select class="selecao" id="genero" name="genero" required>
                                <option value="">Selecione</option>
                                <option value="M" <%= usuario[0].usr_genero === 'M' ? 'selected' : '' %>>Masculino</option>
                                <option value="F" <%= usuario[0].usr_genero === 'F' ? 'selected' : '' %>>Feminino</option>
                                <option value="NB" <%= usuario[0].usr_genero === 'NB' ? 'selected' : '' %>>Não Binário</option>
                            </select>
                        </div>

                        <!-- Data de Nascimento -->
                        <div class="linha_centralizada">
                            <div class="data_div">
                                <label class="label_pequena" for="data">Data de Nascimento</label>
                                <% let dataFormatada = '';
                                if (usuario[0].usr_data_de_nascimento) {
                                    let date = new Date(usuario[0].usr_data_de_nascimento);
                                    if (!isNaN(date.getTime())) {
                                        dataFormatada = date.toISOString().split('T')[0];
                                    }
                                }
                                %>
                                <input type="date" id="data" name="data" value="<%=dataFormatada%>" required>
                            </div>
                        </div>
                        

                        <!-- Senha -->
                        <div class="linha_centralizada">
                        <div class="senha">
                            <label class="label" for="senha">Senha</label>
                                <div class="erro_div">
                                    <input class="senha_input" type="password" id="senha" name="senha" value="<%=usuario[0].usr_senha%>" required>
                                    <span id="erroSenha" class="erro" style="color: red; display: none;">*</span>
                                </div>
                            </div>
                        </div>
                        

                        <!-- Confirmação de Senha -->
                        <div class="linha_centralizada">
                            <div class="senha">
                                <label class="label" for="conf_senha">Confirme a Senha</label>
                                <div class="erro_div">
                                    <input class="senha_input" type="password" id="conf_senha" name="conf_senha" value="<%=usuario[0].usr_senha%>" required>
                                    <span id="erroConfSenha" class="erro" style="color: red; display: none;">*</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Botão de Confirmação -->
                    <div class="botoes">
                        <button type="submit">Confirmar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <script type="module" src="/scripts/contas/adm/atualizarUsuario.js"></script>
    <script type="module" src="/scripts/base/adm/navbarAdm.js"></script>
    <script type="module" src="/scripts/base/adm/sidebarAdm.js"></script>
</body>
</html>