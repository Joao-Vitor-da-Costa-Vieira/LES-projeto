<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/style/usuario/contas/cadastroStyle.css">
    <link rel="stylesheet" href="/style/usuario/contas/scriptsStyle.css">
    <link rel="stylesheet" href="/style/adm/recursosBasicos.css">
    <link rel="icon" href="/imagens/livro-16.ico">
</head>
<body>

    <header>
        <nav class="main-nav">
            <a class="home-link">Home</a>
            <div class="nav-botao">
                <button id="Clientes">Clientes</button>
                <button id="inativos">Inativos</button>
            </div>
        </nav>
        
        <nav class="usuario-nav">
            <div class="usuario-sessao">
                <span class="usuario-nome" id="adm-name-display"></span>
                <img src="/imagens/avatar.jpg" alt="Imagem do usuário" class="usuario-imagem">
            </div>
        </nav>
    </header>

    <div class="main">
        <!--Barra lateral de Navegação-->
        <div class="sidenav">
            <a id="pedidos">Pedidos</a>
            <a id="estoque">Estoque</a>
            <a id="analise">Análise</a>
        </div>

        <div class="conteudo">

            <div class="container-endereco">
                <div class="bloco_titulo">
                    <h1 class="titulo"> Endereço de Cobranca</h1>
                </div>

                <div id="user-data" data-user-id="<%= Array.isArray(usuario) ? usuario[0]?.usr_id : usuario?.usr_id %>" style="display:none;"></div>

                <br>

                <div class="table_div">
                    <table>
                        <thead>
                            <tr>
                                <th>Endereço</th>
                                <th>Bairro</th>
                                <th>Estado</th>
                                <th>CEP</th>
                                <th>Número</th>
                                <th>Opções</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% enderecos.forEach(endereco => { %>
                                <tr class="endereco-mostrado">
                                    <td class="endereco-id"><%= endereco.end_id %></td>
                                    <td><%= endereco.end_endereco %></td>
                                    <td><%= endereco.end_bairro %></td>
                                    <td><%= endereco.end_estado %></td>
                                    <td><%= endereco.end_cep %></td>
                                    <td><%= endereco.end_numero %></td>
                                    <td>
                                        <div class="botoes_resultado">
                                            <a class="atualizar" href="#">Atualizar</a>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            
            </div>

            <br>
            
            <div class="botoes">
                    <button class="adicionar" type="button">Adiconar</button>
            </div>
        </div>
    </div>
    
    <script type="module" src="/scripts/contas/adm/endCobranca.js"></script>
    <script type="module" src="/scripts/base/adm/navbarAdm.js"></script>
    <script type="module" src="/scripts/base/adm/sidebarAdm.js"></script>
</body>
</html>