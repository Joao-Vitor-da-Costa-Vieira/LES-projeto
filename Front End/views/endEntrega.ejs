<!DOCTYPE html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style/style.css">
    <title>Endereço de Entrega</title>
</head>
<body>
    <div class="voltar"><a href="/">Voltar</a></div>

    <div class="main">
        <div class="container-endereco">
            <div class="bloco_titulo">
                <h1 class="titulo">Endereço de Entrega</h1>
            </div>

            <div class="genero">            
                <label for="etr">Endereço</label>
                <select name="entrega" id="etr">
                    <% enderecos.forEach(endereco => { %>
                        <option value="<%=endereco.end_endereco%>"><%=endereco.end_endereco%></option>
                    <% }); %>
                </select>  
            </div>

            <% enderecos.forEach(endereco => { %>
                <div class="endereco-mostrado">
                    <div class="endereco">
                        <p class="invisible endereco-id"><%=endereco.end_id%></p>
                        <h2><%=endereco.end_endereco%></h2>
                        <p><%=endereco.end_bairro%></p>
                        <p><strong>Número: </strong><%=endereco.end_numero%></p>
                    </div>
                    <div class="acoes-endereco">
                        <a class="atualizar" href="#">Atualizar</a>
                        <a href="">Excluir</a>
                    </div>
                </div>
            <% }); %>
            
            <div class="endereco-adicionar">
                <a class="adicionar" href="/endereco-entrega/<%=enderecos[0].end_usr_id%>/adicionar">Adicionar novo endereço</a>
            </div>
        </div>
    </div>

    <script type="module" src="/scripts/endEntrega.js"></script>
    <script type="module" src="/scripts/mensagemEndEntrega.js"></script>
</body>
</html>