<!DOCTYPE html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style/style.css">
    <title>Endereço de Cobrança</title>
</head>
<body>
    <div class="voltar"><a href="/">Voltar</a></div>

    <div class="main">
        <div class="container-endereco">
            <div class="bloco_titulo">
                <h1 class="titulo"> Endereço de Cobranca</h1>
            </div>

            <div class="genero">
                    <label for="cbr">Endereço</label>
                    <select name="cobranca" id="cbr">
                        <% enderecos.forEach(endereco => { %>
                            <option value="<%=endereco.end_endereco%>"><%=endereco.end_endereco%></option>
                        <% }); %>
                    </select>
            </div>

            <% enderecos.forEach(enderecos => { %>
                <div class="endereco-mostrado">
                    <div class="endereco">
                        <p class="invisible endereco-id"><%=enderecos.end_id%></p>
                        <h2><%=endereco.end_endereco%></h2>
                        <p><%=endereco.end_bairro%></p>
                        <p><strong>Número: </strong><%=enderecos.end_numero%></p>
                    </div>
                    <div class="acoes-endereco">
                        <a class="atualizar" href="#">Atualizar</a>
                        <a href="">Excluir</a>
                    </div>
                </div>
            <% }); %>
            
            <div class="endereco-adicionar">
                <a class="adicionar" href="/endereco-cobranca/<%=enderecos[0].end_usr_id%>/adicionar">Adicionar novo endereço</a>
            </div>
        </div>
    </div>

    <script type="module" src="/scripts/endCobranca.js"></script>
    <script type="module" src="/scripts/mensagemEndCobranca.js"></script>
</body>
</html>