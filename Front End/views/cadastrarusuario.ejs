                            <option value="SP">SP</option>
                            <option value="SE">SE</option>
                            <option value="TO">TO</option>
                        </select>
                    </div>
                </div>

                <!--Segunda Linha-->
                <div class="linha_centralizada">
                    <div class="endereco">
                        <label class="label_pequena" for="endereco_e">Endereço</label>
                        <div class="erro_div">
                            <input class="endereco_input" type="text" id="endereco_e" name="endereco_e">
                            <span id="erroEnderecoE" class="erro" style="color: red; display: none;">*</span>
                        </div>
                    </div>

                    <div class="numero">
                        <label class="label_pequena" for="numero_e">Nº.</label>
                        <div class="erro_div">
                            <input class="numero_input" type="number" id="numero_e" name="numero_e">
