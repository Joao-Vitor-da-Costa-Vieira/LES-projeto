                <!--Segunda Linha-->
                <div class="linha_centralizada">
                    <div class="endereco">
                        <label class="label_pequena" for="endereco_c">Endereço</label>
                        <div class="erro_div">
                            <input class="endereco_input" type="text" id="endereco_c" name="endereco_c">
                            <span id="erroEnderecoC" class="erro" style="color: red; display: none;">*</span>
                        </div>
                    </div>
    
                    <div class="numero">
                        <label for="numero_c">Nº.</label>
                        <div class="erro_div">
                            <input class="numero_input" type="number" id="numero_c" name="numero_c">
                            <span id="erroNumeroC" class="erro" style="color: red; display: none;">*</span>
