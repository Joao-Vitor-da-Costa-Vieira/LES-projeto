    <!--Div usada para centralizar o conteudo para da página além da barra lateral-->
    <div class="conteudo">
        <div class="bloco_titulo">
            <h1 class="titulo">Cadastrar Usuário</h1>
        </div>

        <br>

        <div class="main">
            <form id="formCadastro" method="POST">
                <!--Input de Nome-->
                <div class="nome">
                    <label class="label" for="nome">Nome</label>
                    <div class="erro_div">
                        <input class="nome_input" type="text" id="nome" name="nome">
                        <span id="erroNome" class="erro" style="color: red; display: none;">*</span>
                    </div>
                </div>

                <!--Input de Email-->
                <div class="email">
                    <label class="label" for="E-mail">E-mail</label>
                    <div class="erro_div">
                        <input class="email_input" type="text" id="E-mail" name="E-mail">
                        <span id="erroEmail" class="erro" style="color: red; display: none;">*</span>
                    </div>
                </div>
                
                <!--Input de CPF-->
                <div class="cpf">
                    <label class="label" for="cpf">CPF</label>
                    <div class="erro_div">
                        <input class="cpf_input" type="number" id="cpf" name="cpf">
                        <span id="erroCpf" class="erro" style="color: red; display: none;">*</span>
                    </div>
                </div>

                <!--Bloco de Texto Informando como deve ser a senha-->
                <div class="bloco_texto">
                    <p>Sua escolha de senha deve conter ao menos:</p>
                    <p>- 8 caracteres.</p>
                    <p>- Uma letra Maiúscula, minuscula, número e símbolo.</p>
                </div>

                <!--Input de senha-->
                <div class="senha">
                    <label class="label" for="senha">Senha</label>
                    <div class="erro_div">
                        <input class="senha_input" type="password" id="senha" name="senha">
                        <span id="erroSenha" class="erro" style="color: red; display: none;">*</span>
                    </div>
                </div>
                
                <!--Input de confirmação de senha-->
                <div class="senha">
                    <label class="label" for="conf_senha">Confirmar Senha</label>
                    <div class="erro_div">
                        <input class="senha_input" type="password" id="conf_senha" name="conf_senha">
                        <span id="erroConfSenha" class="erro" style="color: red; display: none;">*</span>
                    </div>
                </div>

                <!--Input de data e Telefone-->
                <div class="linha_centralizada">
                    <div class="data_div">
                        <label class="label_pequena" for="data_nascimento">Data</label>
                        <div class="erro_div">
                            <input type="date" id="data_nascimento" name="data_nascimento">
                            <span id="erroData" class="erro" style="color: red; display: none;">*</span>
                        </div>
                    </div>

                    <div class="telefone">
                        <label class="label_pequena" for="telefone1">Telefone 1</label>
                        <div class="erro_div">
                            <input class="telefone_input" type="text" id="telefone1" name="telefone1">
                            <span id="erroTelefone1" class="erro" style="color: red; display: none;">*</span>
                        </div>
                    </div>
                
                    <div class="telefone">
                        <label class="label_pequena" for="telefone2">Telefone 2</label>
                        <input class="telefone_input" type="text" id="telefone2" name="telefone2">
                    </div>
                </div>

                <!--Input de Gênero-->
                <div class="genero">
                    <label class="label_genero">Gênero <span id="erroGenero" class="erro" style="color: red; display: none;">*</span></label>
                        <select class="selecao" id="genero" name="genero">
                            <option value="">Selecione</option>
                            <option value="Masculino">Masculino</option>
                            <option value="Feminino">Feminino</option>
                            <option value="Nao_Binario">Não Binário</option>
                        </select>
                </div>

                <br>

                <!--Cadastrar End. Entrega-->
                <div class="bloco_titulo">
                    <h1 class="titulo">Cadastrar End. Entrega</h1>
                </div>
                
                <br>
                
                <!--Primeira Linha-->
